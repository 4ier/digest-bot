# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/feishu-digest-bot

# Feishu Bot Configuration
# 从飞书开发者平台获取：https://open.feishu.cn/app
FEISHU_APP_ID=cli_xxxxxxxxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FEISHU_VERIFICATION_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FEISHU_ENCRYPT_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SiliconFlow Configuration
# 从 SiliconFlow 平台获取：https://cloud.siliconflow.cn/account/ak
SILICONFLOW_API_KEY=your_api_key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-R1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Feature Flags
ENABLE_MOCK_DATA=false
ENABLE_DAILY_DIGEST=true
DIGEST_TIME=20:00

# Deployment Configuration
# 这些配置在生产环境中通过 PM2 的 ecosystem.config.js 管理
# SERVER_HOST=your_server_ip
# SERVER_USERNAME=your_username
# SERVER_SSH_KEY=your_ssh_private_key
